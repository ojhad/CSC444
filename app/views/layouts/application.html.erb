<!DOCTYPE html>
<html>
  <head>
    <title>TeenServ</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="//maps.google.com/maps/api/js?key="+<%=Rails.application.secrets.GOOGLE_KEY%>></script>
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script> 
    
    <link href="https://fonts.googleapis.com/css?family=Rajdhani|Roboto:300" rel="stylesheet">
    <meta name="turbolinks-cache-control" content="no-preview">
  </head>

  <body>

    <nav class="navbar navbar-default mynav">
      <div class="container-fluid">

        <!-- Logo -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "TeenServ", "/", :class=> "navbar-brand" %>
        </div>

        <!-- Menu Items -->
        <div class="collapse navbar-collapse" id = "navbar-collapse">
	        <ul class = "nav navbar-nav">
		        <form action="/search/search" method="get" class="form-inline my-2 my-lg-0">
			        <input class="form-control mr-sm-2" name="search_term" type="search" placeholder="Search" aria-label="Search">
              <%= button_tag type: 'submit', class: "btn btn-outline-success my-2 my-sm-0", id: "register-button" do %>
                  <i class="fa fa-search" aria-hidden="true"></i>
              <% end %>
		        </form>
          </ul>
          <% if current_user != true_user %>
              <ul class = "nav navbar-nav loginAs">
                You are signed in as <%= current_user.first_name %> <%= current_user.last_name %>
                <%= link_to "Back to your user", stop_impersonating_users_path, method: :post, class: 'btn btn-default userBack' %>
              </ul>
          <% end %>
          <!-- Items to the right side of the navbar -->
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li>
                <div class="collapse navbar-collapse">
                  <ul class="nav navbar-nav navbar-left">
                    <li id = "<%= @current_user.id %>" class="dropdown dropdown-notifications" data-behavior="notifications">
                      <a href="#notifications-panel" class="dropdown-toggle" data-toggle="dropdown" data-behavior="notifications-link">
                        <i data-behavior="unread-count" id = "data-notif" data-count="" class="glyphicon glyphicon-bell notification-icon"></i>
                      </a>

                      <div class="dropdown-container dropdown-position-bottomright">

                        <div class="dropdown-toolbar">
                          <!--removed, as just default to removing all notifications once bell is clicked-->
                          <!--<div class="dropdown-toolbar-actions">
                            <a onclick="markAllAsRead()">Mark all as read</a>
                          </div>-->
                          <h3 id = "notif-title" class="dropdown-toolbar-title">Notifications</h3>
                        </div><!-- /dropdown-toolbar -->

                        <ul class="dropdown-menu" data-behavior="notification-items">
                          <!-- commented out as notifications will be dynamically populated in notifications.coffee -->

                          <!--<div class="notification new" ng-repeat="notification in newNotifications.slice().reverse() track by notification.timestamp">
                            <div class="notification-image-wrapper">
                              <div class="notification-image">
                                <img src="{{notification.user.imageUrl}}" alt="" width="32">
                              </div>
                            </div>
                            <div class="notification-text">
                              <span class="highlight">hiasdf jaksdjf</span> asdfas jasdfasfj
                            </div>
                          </div>-->
                          <li class="notification">
                            <div class="media">
                              <div class="media-left">
                                <div class="media-object">
                                  <img data-src="holder.js/50x50?bg=cccccc" class="img-circle" alt="Name" />
                                </div>
                              </div>
                              <div class="media-body">
                                <strong class="notification-title"><a href="#">Dave Lister</a> commented on <a href="#">DWARF-13 - Maintenance</a></strong>
                                <p class="notification-desc">I totally don't wanna do it. Rimmer can do it.</p>

                                <div class="notification-meta">
                                  <small class="timestamp">27. 11. 2015, 15:00</small>
                                </div>
                              </div>
                            </div>
                          </li>
                        </ul>

                        <div class="dropdown-footer text-center">
                          <a><%= link_to "View", notifications_path(current_user)%></a>
                        </div><!-- /dropdown-footer -->

                      </div><!-- /dropdown-container -->
                    </li><!-- /dropdown -->
                  </ul>
                </div>
              </li>
              <li class="dropdown">
                <%= link_to("#", :class=>"dropdown-toggle", "data-toggle" =>"dropdown", :role => "button", "aria-expanded" => "false") do %> Services <span class="caret"></span>
                <% end %>
                <ul class="dropdown-menu">
                  <% if !@user.nil? && @user.is_client?%>
                      <li><%= link_to "Create New Service", new_service_path%></li>
                  <%end%>
                  <li><%= link_to "View Service Postings", services_path%></li>
                </ul>
              </li>
              <li class="dropdown">
                <%= link_to("#", :class=>"dropdown-toggle", "data-toggle" =>"dropdown", :role => "button", "aria-expanded" => "false") do %> My Account <span class="caret"></span>
                  <% end %>
                <ul class="dropdown-menu">
                  <li><%= link_to "View Profile", user_path(current_user)%></li>
                  <% if current_user.is_sadmin? %>
                    <li><%= link_to "Add User", new_user_path%></li>
                    <li><%= link_to "Login as", login_as_users_path%></li>
                  <% end %>
                  <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
                </ul>
              </li>
              <% else %>
                <li><%= link_to "Sign Up", new_user_registration_path, :class=>"sign-up" %></li>
                <li><%= link_to "Sign In", new_user_session_path, :class=>"sign-in" %></li>
              <% end %>
          </ul>

        </div> <!-- Menu Items -->

      </div>
    </nav>



    <main>
      <% if notice %>
          <p class="alert alert-success"><%= notice %></p>
      <% end %>

      <% if alert %>
          <p class="alert alert-danger"><%= alert %></p>
      <% end %>

      <%= yield %>
    </main>

    <footer id="myFooter">
      <div class="container-footer">
          <div class="row">
              <div class="col-sm-4 myCols">
                  <h5>Get started</h5>
                  <ul>
                      <li><%= link_to "Home", "/"%></li>
                      <% if !user_signed_in? %>
                        <li><%= link_to "Sign Up", new_user_registration_path %></li>
                      <% end %>
                  </ul>
              </div>
              <div class="col-sm-4 myCols">
                  <h5>Company</h5>
                  <ul>
                      <li><%= link_to "About Us", about_path %></li>
                      <li><%= link_to "Contact Us", contact_us_path %></li>
                      <li><%= link_to "FAQ", faq_path %></li>
                  </ul>
              </div>
              <div class="col-sm-4 myCols">
                  <h5>Legal</h5>
                  <ul>
                      <li><%= link_to "Terms of Service", terms_of_service_path %></li>
                      <li><%= link_to "Privacy Policy", about_path %></li>
                  </ul>
              </div>
          </div>
      </div>
      <div class="social-networks">
          <a href="#" class="twitter"><i class="fa fa-twitter"></i></a>
          <a href="#" class="facebook"><i class="fa fa-facebook-official"></i></a>
          <a href="#" class="google"><i class="fa fa-google-plus"></i></a>
      </div>
    </footer>
    <script>

        function markAllAsRead(){
            document.getElementById("notif-title").innerHTML = "Notifications (0)";
            var num = document.getElementById("data-notif");
            num.setAttribute("data-count","");
            //want to change the notification bckgrnd color, but cause we use :before and :after, need to work around this
            var styleElem = document.head.appendChild(document.createElement("style"));
            styleElem.innerHTML = ".notification-icon:after {background: none;}";
        }
    </script>
  </body>

</html>
