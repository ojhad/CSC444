<div style="width: 80%; margin:0 auto;">
	<div class="list-group">
		<% @convos.each do |conversation| %>
				<% user_to_find = conversation.sender_id == @current_user.id ? conversation.recipient_id : converation.sender_id %>
				<% user_profile = User.find(user_to_find) %>
				<% last_message = conversation.messages.last %>
			<a href="#" class="list-group-item list-group-item-action flex-column align-items-start">
			<span class="chat-img pull-left">
        <img src="<%= user_profile.profile_pic.url %>" alt="User Avatar" class="img-circle" style="width: 75px; height: 75px;" />
      </span>
			<div style="margin-left: 90px;" class="d-flex w-100 justify-content-between">
				<h5 class="mb-1"><%= user_profile.first_name + ' ' + user_profile.last_name%></h5>
				<small><%= last_message.message_time %></small>
				<p class="mb-1"><%= last_message.body %></p>
			</div>
			</a>
		<% end %>
	</div>
</div>
