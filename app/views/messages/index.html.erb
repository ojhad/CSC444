<div style="width: 80%; margin:0 auto;">
	<h1><%= t :messages %></h1>
	<br>
	<div style="border: 1px solid #ede8e8">
		<div class="panel" style="height: 500px;">
			<div class="panel-body">
				<ul class="chat">
					<% @messages.each do |message| %>
						<% sender = message.user %>
						<li class="<%= message.user.id == current_user.id ? "right" : "left"; %> clearfix">
							<span class="chat-img <%= message.user.id == current_user.id ? "pull-right" : "pull-left"; %>">
                <img src="<%= sender.profile_pic.url %>" alt="User Avatar" class="img-circle" style="max-height: 50px; max-width: 50px" />
              </span>
							<div class="chat-body clearfix">
								<div class="header">
									<% if message.user.id == current_user.id %><small class=" text-muted"><span class="glyphicon glyphicon-time"></span>15 mins ago</small><% end %>
									<strong class="<%= message.user.id == current_user.id ? "pull-right " : ""; %>primary-font"><%= sender.first_name + ' ' + sender.last_name %></strong> <% if message.user.id != current_user.id %><small class="pull-right text-muted">
									<span class="glyphicon glyphicon-time"></span>12 mins ago</small><% end %>
								</div>
								<p><%= message.body %></p>
							</div>
						</li>
					<% end %>
				</ul>
			</div>
			<div class="panel-footer">
				<div class="input-group">
					<input id="btn-input" type="text" class="form-control input-sm" placeholder="Type your message here..." />
					<span class="input-group-btn">
	                            <button class="btn btn-warning btn-sm" id="btn-chat">
	                                Send</button>
	                        </span>
				</div>
			</div>
		</div>
	</div>
</div>
