<div class="container payouts">
  <h4> <%= t :payoutHistory%></h4>
  <br>
  <p> <%= t :payoutHistoryDesc%> </p><hr>
  <div class="col-md-6">
    <% if !@user_payouts.blank?%>
      <% @user_payouts.each do |p| %>
        <div class="row">
          <table style="width:100%" >
            <tr>
              <th><%=t :method%></th>
              <th>ID</th>
              <th><%=t :amount%> (CAD)</th>
              <th>Date</th>
            </tr>
            <tr>
              <td><%=p.method.upcase()%></td>
              <td><%=p.id%></td>
              <td>$<%=p.amount%></td>
              <td><%=p.created_at.strftime("%B %d, %Y")%></td>
            </tr>
          </table>
        </div>
        <hr>
      <%end%>
    <%else%>
      <p><%= t :noPayouts%></p>
    <%end%>
  </div>
</div>