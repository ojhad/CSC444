<h1> Welcome <%= @user.name%></h1>

<table border="1">
  <tr>
    <th>Your address</th>
  </tr>
  <tr>
    <td><%=@user.address_1%></td>
  </tr>
  <tr>
    <td><%=@user.address_2%></td>
  </tr>
  <tr>
    <td><%=@user.city%></td>
  </tr>
  <tr>
    <td><%=@user.province%></td>
  </tr>
  <tr>
    <td><%=@user.postal_code%></td>
  </tr>
  <tr>
    <td><%=@user.country%></td>
  </tr>
</table>

<h2>Your Services:</h2>
<% @user.services.each do |service| %>
    <h4>Service: <%= service.service_title %></h4>
    <h4>Charge: $<%= service.charge_per_hour %></h4>
    <%= link_to "Edit", edit_user_service_path(@user.id, service), :class => 'btn btn-default' %>
    <%= link_to "Delete",user_service_path(@user.id, service), method: :delete, data: {confirm: 'Are you sure?'}, :class => 'btn btn-danger' %>
<% end %>

<div>
  <%= link_to "Add service", new_user_service_path(@user.id)%>
</div>

