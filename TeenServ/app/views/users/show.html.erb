<h1> Welcome <%= @user.name%></h1>

<table border="1">
  <tr>
    <th>Your address</th>
  </tr>
  <tr>
    <td><%=@user.address_1%></td>
  </tr>
  <tr>
    <td><%=@user.address_2%></td>
  </tr>
  <tr>
    <td><%=@user.city%></td>
  </tr>
  <tr>
    <td><%=@user.province%></td>
  </tr>
  <tr>
    <td><%=@user.postal_code%></td>
  </tr>
  <tr>
    <td><%=@user.country%></td>
  </tr>
</table>

<h2>Your Services:</h2>
<% @user.services.each do |service| %>
    <h3>Service: <%= service.service_title %></h3>
    <h3>Charge: $<%= service.charge_per_hour %></h3>
    <%= link_to "Edit/Delete Service", user_services_path(@user.id), :class => 'btn btn-default' %>
<% end %>

<div>
  <%= link_to "Add service", new_user_service_path(@user.id)%>
</div>

