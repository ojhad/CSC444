<html>

<h1>Please provide the following information to better serve you</h1>

<form>
  <label> I am signing up as ...</label>
  <input type="radio" class="GroupSelector" name="group" value="teen"> Teenager
  <input type="radio" class="GroupSelector" name="group" value="client"> Client
</form>

<%= form_for(@user, url: edit_user_path(@user.id), method: :get)  do |f| %>
<p>
  First name:<br>
  <%= f.text_field :first_name %>
</p>
<p>
  Last name:<br>
  <%= f.text_field :last_name %>
</p>
<p>
  Address line 1:<br>
  <%= f.text_field :address_1 %>
</p>
<p>
  Address line 2:<br>
  <%= f.text_field :address_2 %>
</p>
<p>
  City:<br>
  <%= f.text_field :city %>
</p>
<p>
  Province:<br>
  <%= f.text_field :province %>
</p>
<p>
  Postal Code:<br>
  <%= f.text_field :postal_code %>
</p>
<p>
  Country:<br>
  <%= f.text_field :country %>
</p>
<p>
  Home Number:<br>
  <%= f.text_field :home_number %>
</p>
<p>
  Mobile Number:<br>
  <%= f.text_field :mobile_number %>
</p>
<p id="age" hidden="true">
  Age:<br>
  <%= f.text_field :age %>
</p>
<p id="profile_pic" hidden="true">
  Profile Picture:<br>
  <%= f.text_field :profile_pic %>
</p>
<%= f.hidden_field :group %>
<%= f.submit %>
<% end %>

</html>

<script type="text/javascript">

    $(".GroupSelector").change(function(){
        switch($(this).val()) {
            case 'teen' :
                $('#age').show()
                $('#profile_pic').show()
                $('#user_group').val(0)
                break;
            case 'client' :
                $('#age').hide()
                $('#profile_pic').hide()
                $('#age').val(null)
                $('#user_group').val(1)
                break;
        }
    })
</script>