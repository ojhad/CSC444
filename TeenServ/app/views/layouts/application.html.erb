<!DOCTYPE html>
<html>
  <head>
    <title>TeenServ</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="//maps.google.com/maps/api/js?key="+<%=Rails.application.secrets.GOOGLE_KEY%>></script>
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>

    <link href="https://fonts.googleapis.com/css?family=Rajdhani|Roboto:300" rel="stylesheet">
  </head>

  <body>

    <nav class="navbar navbar-inverse">
      <div class="container-fluid">

        <!-- Logo -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "TeenServ", "/", :class=> "navbar-brand" %>
        </div>

        <!-- Menu Items -->
        <div class="collapse navbar-collapse" id = "navbar-collapse">
	        <ul class = "nav navbar-nav">
            <%= form_for :search, :url => url_for(:controller => 'search', :action => 'search'), :method => :get, :html => {:class => "form-inline my-2 my-lg-0"} do |f| %>
  		        <input class="form-control mr-sm-2" name="search_term" type="search" placeholder="Search" aria-label="Search">
  		        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
  	        <% end %>
          </ul>

          <!-- Items to the right side of the navbar -->
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li class="dropdown">
                <%= link_to("#", :class=>"dropdown-toggle", "data-toggle" =>"dropdown", :role => "button", "aria-expanded" => "false") do %> My Account <span class="caret"></span>
                  <% end %>
                <ul class="dropdown-menu">
                  <li><%= link_to "View Profile", user_path(current_user)%></li>
                  <li><%= link_to "Create New Job", new_service_path%></li>
                  <li><%= link_to "View Job Postings", services_path%></li>
                  <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
                </ul>
              </li>
              <% else %>
              <li><%= link_to "Sign Up", new_user_registration_path %></li>
              <li><%= link_to "Sign In", new_user_session_path %></li>
              <% end %>
          </ul>

        </div> <!-- Menu Items -->

      </div>
    </nav>

    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>

    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <%= yield %>

    <div class = "blank-content">
    </div>
    <footer id="myFooter">
      <div class="container">
          <div class="row">
              <div class="col-sm-4 myCols">
                  <h5>Get started</h5>
                  <ul>
                      <li><%= link_to "Home", "/"%></li>
                      <li><%= link_to "Sign Up", new_user_registration_path %></li>
                  </ul>
              </div>
              <div class="col-sm-4 myCols">
                  <h5>About us</h5>
                  <ul>
                      <li><%= link_to "Company Information", about_path %></li>
                      <li><%= link_to "Contact Us", about_path %></li>
                      <li><%= link_to "FAQ", about_path %></li>
                  </ul>
              </div>
              <div class="col-sm-4 myCols">
                  <h5>Legal</h5>
                  <ul>
                      <li><%= link_to "Terms of Service", about_path %></li>
                      <li><%= link_to "Privacy Policy", about_path %></li>
                  </ul>
              </div>
          </div>
      </div>
      <div class="social-networks">
          <a href="#" class="twitter"><i class="fa fa-twitter"></i></a>
          <a href="#" class="facebook"><i class="fa fa-facebook-official"></i></a>
          <a href="#" class="google"><i class="fa fa-google-plus"></i></a>
      </div>
    </footer>
  </body>

  <script>
  //Show dropdown on hover and hide otherwise
    $('ul.nav li.dropdown').hover(function() {
      $('.dropdown-menu').show();
    }, function() {
      $('.dropdown-menu').hide();
    });
  </script>

</html>
