<!DOCTYPE html>
<html>
  <head>
    <title>TeenServ</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="//maps.google.com/maps/api/js?key="+<%=Rails.application.secrets.GOOGLE_KEY%>></script>
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
  </head>

  <body>

    <nav class="navbar navbar-inverse">
      <div class="container-fluid">

        <!-- Logo -->
        <div class="navbar-header">
          <%= link_to "TeenServ", "/", :class=> "navbar-brand" %>
        </div>

        <!-- Menu Items -->
        <div class="collapse navbar-collapse">

          <!-- Items to the right side of the navbar -->
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li class="dropdown">
                <%= link_to("#", :class=>"dropdown-toggle", "data-toggle" =>"dropdown", :role => "button", "aria-expanded" => "false") do %> My Account <span class="caret"></span>
                  <% end %>
                <ul class="dropdown-menu">
                  <li><%= link_to "View Profile", user_path(current_user)%></li>
                  <li><%= link_to "Create New Job", new_service_path%></li>
                  <li><%= link_to "View Job Postings", services_path%></li>
                  <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
                </ul>
              </li>
              <% else %>
              <li><%= link_to "Sign Up", new_user_registration_path %></li>
              <li><%= link_to "Sign In", new_user_session_path %></li>
              <% end %>
          </ul>

        </div> <!-- Menu Items -->

      </div>
    </nav>

    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>

    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <%= yield %>
  </body>

  <script>
  //Show dropdown on hover and hide otherwise
    $('ul.nav li.dropdown').hover(function() {
      $('.dropdown-menu').show();
    }, function() {
      $('.dropdown-menu').hide();
    });
  </script>

</html>
